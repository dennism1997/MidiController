<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LaunchButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
    <style name="Fader" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:max">127</item>
        <item name="thumbTint">@color/colorAccent</item>
        <item name="android:thumb">@drawable/fader_thumb</item>
    </style>

</resources>
